{% extends "base.html.j2" %}
{% block title %}Posts{% endblock %}
{% block content %}
<br/>
    <div id='posts'>
        {% for post in posts %}
            <div class='card'>
                <div class="card-header d-flex justify-content-between align-items-center">
                    <a href="">{{post.user.username}}</a>
                    <div>
                        <div class="btn-group">
                            <a href="#" class="btn btn-primary">Coment</a>
                            {% if user.id == post.author %}
                                <a href="/delete-post/{{post.id}}" class="btn btn-danger">Delete</a>
                                <br/>                                
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="card-text"><p class="card-text">{{post.text}}</p></div>
                        <p>
                            <a data-bs-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                                View x Comments
                            </a>
                            </p>
                            <div class="collapse" id="collapseExample">
                            <div class="card card-body">
                                COMMENTS GOES HERE
                            </div>
                        </div>
                </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        Created in: {{post.date_created.strftime("%m/%d/%Y, %H:%M:%S")}}
                        <div>
                            <span id="likes-count-{{post.id}}">{{post.likes|length}} </span>
                            {% if user.id in post.likes|map(attribute="author")|list %}
                                <a href="/like-post/{{post.id}}"><i class="fas fa-thumbs-up" id="like-button-{{post.id}}" onclick="like({{post.id}})"></i></a>
                            {% else %}
                                <a href="/like-post/{{post.id}}"><i class="far fa-thumbs-up" id="like-button-{{post.id}}" onclick="like({{post.id}})"></i></a>
                            {% endif %}
                        </div>
                    </div>
            </div>
            <br/>
        {% endfor %}
    </div>
    <br/>
<div align='center'>
    <a href="/create-post"><button type="button" class="btn btn-primary btn-lg">Create a Post</button></a>
</div>
{% endblock content %}